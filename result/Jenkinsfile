pipeline {
  agent any

  tools{
    nodejs "NodeJS"
  }

  stages{
    stage("build"){
      when{
          changeset "**/result/**"
      }
      steps{
          echo 'Instalasi npm'
          dir('result'){
            sh 'npm install'
          }
      }
    }
    stage("test"){
      when{
          changeset "**/result/**"
      }
      steps{
        echo 'Running Test'
        dir('result'){
            sh 'npm install'
        }
      }
    }
  }


  post{
      always {
        echo 'Building multibranch pipeline for worker is completed..'
      }
      failure {
          slackSend (channel: "jenkins-cicd", message: "Build Failed - Ilham - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
      }
      success {
          slackSend (channel: "jenkins-cicd", message: "Build Succeeded - Ilham - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
      }
    }

  }