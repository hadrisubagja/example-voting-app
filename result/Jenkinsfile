pipeline {
  agent any

  tools{
    NodeJS 'nodejs 8.9.0'
  }

  stages{
    stage("build"){
      when{
          changeset "**/result/**"
      }
      steps{
          echo 'npm build'
            sh 'npm install'
      }
    }
  }


  stages{
    stage("test"){
      when{
          changeset "**/result/**"
      }
      steps{
          echo 'npm test'
            sh 'npm test'
      }
    }
  }



  post{
      always {
        echo 'Building multibranch pipeline for worker is completed..'
      }
    }

  }