pipeline {
  agent any

  tools{
    nodejs 'nodejs 8.9.0'
  }

  stages{
    stage("build"){
      when{
          changeset "**/result/**"
      }
      steps{
          echo 'npm build'
          dir('result'){
            sh 'npm install'
          }
      }
    }
  }


  stages{
    stage("test"){
      when{
          changeset "**/result/**"
      }
      steps{
          echo 'npm test'
          dir('result'){
            sh 'npm test'
          }
      }
    }
  }



  post{
      always {
        echo 'Building multibranch pipeline for worker is completed..'
      }
    }

  }